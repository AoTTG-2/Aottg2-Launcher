<Window x:Class="Aottg2Launcher.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aottg2Launcher"
        mc:Ignorable="d"
        Title="Settings" ResizeMode="NoResize" WindowStyle="None" BorderThickness="1,1,1,1" WindowStartupLocation="CenterOwner" MouseDown="Window_MouseDown" Icon="Images/GameIcon.png" SizeToContent="WidthAndHeight">
    <Grid>
        <Button x:Name="UninstallButton" Content="Uninstall" HorizontalAlignment="Right" Margin="100,30,20,30" VerticalAlignment="Top" Width="60" Height="24" FontSize="13.333" Click="UninstallButtonClick"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="20,30,0,30" VerticalAlignment="Top" Width="60" Height="24" FontSize="13.333" Click="CancelButtonClick"/>

    </Grid>
</Window>
