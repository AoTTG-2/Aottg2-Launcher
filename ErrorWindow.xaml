<Window x:Class="Aottg2Launcher.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aottg2Launcher"
        mc:Ignorable="d"
        Title="Error" ResizeMode="NoResize" WindowStyle="None" BorderThickness="1,1,1,1" WindowStartupLocation="CenterOwner" MouseDown="Window_MouseDown" SizeToContent="WidthAndHeight" Icon="Images/GameIcon.png">
    <Grid>
        <TextBlock x:Name="ErrorLabel" HorizontalAlignment="Center" Margin="20,20,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" TextAlignment="Center" Padding="0" Panel.ZIndex="1" Height="60" Text="Warning:"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Center" Margin="0,100,0,20" VerticalAlignment="Top" Width="75" Height="24" FontSize="13.333" Click="ExitButtonClick"/>

    </Grid>
</Window>
